extends layout

block content
    .container
      h1 Expense Tracker
      .row
        .col-md-6
          .card.mb-3
            .card-body
              .section-header Income
              form#incomeForm
                label Amount:
             
        .col-md-6
          .card.mb-3
            .card-body
              .section-header Expense
              form#expenseForm
                label Amount:
      button.btn.btn-warning.btn-block(type="button") Add Expense     
      .section
        .section-header History of Expenses
        table.history.table.table-striped.table-hover.table-bordered
          thead
            tr
              th Type
              th Category
              th Description 
              th Amount
          tbody#expenseHistory
            each exp in data
              tr
                td #{exp.type}
                td #{exp.category}
                td #{exp.description}
                td #{exp.amount}
                td 
                  a(href='').btn.btn-primary.btn-sm View

          
