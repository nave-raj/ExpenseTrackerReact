extends layout

block content
  .container
    h1 Expense Tracker
    .row
      .col-md-6
        .card.mb-3
          .card-body
            .section-header
              i.fa.fa-arrow-up
              |  Income
            form#incomeForm
              .form-group
                label(for="incomeAmount") Amount:
      .col-md-6
        .card.mb-3
          .card-body
            .section-header
              i.fa.fa-arrow-down
              |  Expense
            form#expenseForm
              .form-group
                label(for="expenseAmount") Amount:
    a(href='/expenses/create-expense').btn.btn-primary Add Expense
    .section
      .section-header
        i.fa.fa-history
        |  History of Expenses
      table.history.table.table-striped.table-hover.table-bordered
        thead
          tr
            th Type
            th Category
            th Description 
            th Amount
            th Action
        tbody#expenseHistory
          each exp in data
            tr
              td #{exp.type}
              td #{exp.category}
              td #{exp.description}
              td #{exp.amount}
              td 
                a(href=`/expenses/${exp.id}`).btn.btn-primary.btn-sm
                  i.fa.fa-eye
                  |  View
